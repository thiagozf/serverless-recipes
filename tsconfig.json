{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "preserve",
    "lib": ["dom", "es2016", "esnext.asynciterable"],
    "module": "esnext",
    "target": "es2016",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@serverless-recipes/dynamodb/*": ["packages/dynamodb/src/*"],
      "@serverless-recipes/dynamodb": ["packages/dynamodb/src"],
      "@serverless-recipes/graphql-api/*": ["packages/graphql-api/src/*"],
      "@serverless-recipes/graphql-api": ["packages/graphql-api/src"],
      "@serverless-recipes/in-memory-repository/*": ["packages/in-memory-repository/src/*"],
      "@serverless-recipes/in-memory-repository": ["packages/in-memory-repository/src"],
      "@serverless-recipes/recipes/*": ["packages/recipes/src/*"],
      "@serverless-recipes/recipes": ["packages/recipes/src"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
